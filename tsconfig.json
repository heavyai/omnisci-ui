{
    "compilerOptions": {
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "declaration": true,
        "jsx": "react",
        "module": "commonjs",
        "target": "es2016",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "lib",
        "pretty": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.*"
    ]
}